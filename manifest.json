{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_shortDesc__",
  "default_locale": "en",
  "version": "1.0.0",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "64": "icons/64x64.png",
    "96": "icons/96x96.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_title": "Open Steganography Decoder & Encoder",
